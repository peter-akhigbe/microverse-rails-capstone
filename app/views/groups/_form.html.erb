<%= form_with(model: group) do |form| %>
  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: 'label' %>
    <%= form.text_field :name, placeholder: 'Name' %>
  </div>

  <div class="form-group">
    <%= form.label :icon, class: 'label' %>
    <%= form.select :icon, icons, { prompt: 'Select an icon' }, class: 'select-icon' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'form-btn' %>
  </div>
<% end %>

<footer>
  <button class="footer-btn" onclick="(
    () => {
      let formBtn = document.querySelector('.form-btn');
      formBtn.click();
      }
    )()">
    Create Group
  </button>
</footer>